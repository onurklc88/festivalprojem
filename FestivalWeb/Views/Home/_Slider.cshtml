@model List<FestivalWeb.Models.Fests>

<div id="main-slider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-target="#main-slider" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @for (int j = 0; j < Model.Count; j++)
        {
            <div class="item @(j == 0 ? "active" : "")">
                <img class="img-responsive" src="@Model[j].FestPicture" alt="slider">
                <div class="carousel-caption">
                    <h2>@Model[j].Title </h2>
                    <h4>₺ @(Model[j].Price.HasValue ? Model[j].Price.Value.ToString() : "Bedava")</h4>
                    <a href="#contact">Bilet Al <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        }
    </div>
</div>