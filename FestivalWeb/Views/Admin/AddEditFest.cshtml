@model FestivalWeb.Models.Fests
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">Icons</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Festival</h1>
    </div>
</div><!--/.row-->


<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("AddEditFest", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    Form
                    <button type="submit" class="btn btn-primary pull-right">Kaydet</button>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <input type="hidden" name="ID" value="@Model.ID" />
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label>Başlık</label>
                                <input class="form-control" placeholder="Başlık" name="Title" value="@Model.Title">
                            </div>

                            <div class="form-group col-md-4">
                                <label>Kısa Açıklama</label>
                                <input class="form-control" placeholder="Kısa Açıklama" name="ShortDesc" value="@Model.ShortDesc">
                            </div>

                            <div class="form-group col-md-4">
                                <label>Açıklama</label>
                                <textarea class="form-control" name="Descrition" rows="3">@Model.Descrition</textarea>
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label>Başlangıç Tarihi</label>
                                <div class='input-group date' id='datetimepicker'>
                                    <input type='text' class="form-control" name="StartDate" value="@Model.StartDate" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Bitiş Tarihi</label>
                                <div class='input-group date' id='datetimepicker2'>
                                    <input type='text' class="form-control" name="FinishDate" value="@Model.FinishDate" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        @if (Model.FestPicture == null)
                        {
                            <div class="form-group">
                                <label>Fotoğraf Yükle</label>
                                <input type="file" name="Resim">
                                <p class="help-block"></p>
                            </div>
                        }

                        <div class="checkbox">
                            <label>
                                <input id='chkIsFree' type='checkbox' checked="@Model.IsFree" value='true' name='IsFree'>Bedava Mı?
                                <input id='chkIsFreeHidden' type='hidden' value='false' name='IsFree'>
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Fiyat</label>
                            <input class="form-control" placeholder="Fiyat" name="Price" value="@Model.Price">
                        </div>


                    </div>

                </div>
            </div>
        }
    </div><!-- /.col-->
</div><!-- /.row -->

@section Script{
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker').datetimepicker({
                minDate: moment("1930-01-01 00:00:00.000"),
                defaultDate: moment("1930-01-01 00:00:00.000"),
                locale: 'tr',
                format: 'D/MM/YYYY'
            });
            $('#datetimepicker2').datetimepicker({
                minDate: moment("1930-01-01 00:00:00.000"),
                defaultDate: moment("1930-01-01 00:00:00.000"),
                locale: 'tr',
                format: 'D/MM/YYYY'
            });
        });

    </script>

}
